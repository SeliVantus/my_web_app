version: '3.8'

services:
  db:
    image: postgres:13
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: rey0608
      POSTGRES_DB: my_test_db
    volumes:
      - postgres_data:/var/lib/postgresql/data
    ports:
      - "5433:5432"

  backend:
    build:
      context: ./backend
    environment:
      DATABASE_URL: postgres://postgres:rey0608@db:5432/my_test_db
    ports:
      - "8000:8000"
    depends_on:
      - db

volumes:
  postgres_data:
